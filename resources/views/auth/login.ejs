<div class="w-full max-w-xs mx-auto mt-16">
  <%if(messages.error) {%>
    <div class="flex items-center w-100 justify-between">
      <span class="text-red-500 text-xs py-3"><%= messages.error %> </span>
    </div>
    <% } %>
    <form action='/login' method='POST' class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="Email">
          Email
        </label>
        <input name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Enter Email">
      </div>
      <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
          Password
        </label>
        <input name="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************">
        <!-- <p class="text-red-500 text-xs italic">Please choose a password.</p> -->
      </div>
      <div class="flex items-center justify-between">
        <!-- <button class="btn-primary  text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
          Sign In
        </button> -->

        <button type="submit" class="btn-primary text-white px-6 py-2 rounded-full focus:outline-none  focus:shadow-outline font-bold "> Log in </button>

        <a class="inline-block align-baseline font-bold text-sm forgot-password" href="#">
          Forgot Password?
        </a>
      </div>
      <div class="flex mx-auto justify-center">
        <span class="inline-block align-baseline font-bold text-sm forgot-password py-4">OR</span> 
      </div>
        <div class="mx-3 my-2 py-1 flex mx-auto">
            <a href="https://www.google.com" target="_blank" class="inline-block align-baseline font-bold text-sm	forgot-password mx-auto flex items-center"> 
              <img src="https://www.freepnglogos.com/uploads/google-logo-png/google-logo-png-suite-everything-you-need-know-about-google-newest-0.png" width="25px" height="25px" class="rounded-full" alt=""> 
              <span class="ml-2">Login with Google</span>
            </a>
        </div>
  
    </form>
    <p class="text-center text-gray-500 text-xs">
      &copy;2022 Pizza Corp. All rights reserved.
    </p>

  </div>