<% if(!CartDetails) {%>
<section class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2 my-2">Cart Empty ðŸ¥º</h1>
            <p class="text-grey-500 text-lg my-2"> Order something to fill in the card.</p>
            <img class="w-2/5 mx-auto" src="img/empty-cart.png" alt="Empty Cart"/>
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-white mt-12">Order Now</a>

        </div>
</section>

<%} else { %>
<section class="cart py-16">

    <div class="order container mx-auto xl:w-1/2 px-2">
        <div class="flex items-center border-b border-grey-300 pb-4">
            <img src="/img/cart_new.png" alt="cart" width="50px" height="50px"/>
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% for (var item in CartDetails) { %>
            <div class="flex items-center">
                <img src="/img/<%= CartDetails[item].image %>" alt="pizza" class="h-20 mb-4 mx-auto rounded-full">
                    <div class="ml-4 flex-1">
                        <h1><%= CartDetails[item].name %></h1>
                        <span><%= CartDetails[item].size %></span>
                    </div>
                    <span class="flex-1"><%= CartDetails[item].quantity %></span> Pcs</span>
                    <span class="font-bold text-lg"> $ <%= CartDetails[item].price %></span>
            </div>
            <%}%>
            
        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold"> Total Amount :</span>
                <span class="amount text-2xl font-bold ml-2"> $<%= totalPrice %></span>
            </div>
            <div>

                <%if(user) {%>
                    <%if(messages.error) {%>
                        <div class="flex items-center w-100 justify-between">
                          <span class="text-red-500 text-xs py-3"><%= messages.error %> </span>
                        </div>
                        <% } %>
                <form method="POST" action="/orders" class="" action="mt-12" >
                    <input class="border border-gray-400 p-2 my-3 w-1/2 " name="phoneNum" type="text" placeholder="Phone Number">

                    <input class="border border-gray-400 p-2 my-3 w-1/2" name="address" type="text" placeholder="Address ">
                    <div>
                        <button class="btn-primary text-white px-6 py-2 rounded-full font-bold mt-6" type="submit">Place Order</button>
                    <% } else {%>
                    <a href="/login" class="inline-block cursor-pointer btn-primary text-white px-6 py-2 rounded-full font-bold mt-6">Login To Continue</a>
                    <%}%>
                    </div>
                </form>
            </div>
          
        </div>
    </div>
</section>
<%}%>