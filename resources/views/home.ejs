
            <section class="hero">
                <div class="container mx-auto flex items-center">
                <div class="w-1/2">
                    <h6 class="text-lg"><em>Are you Hungry ? </em></h6>
                    <h1 class="text-6xl font-weight">Dont Wait</h1>
                    <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
                </div>
                <div class="w-1/2"> 
                    <img src="/img/cheeseHomePizza.jpeg" />
                </div>
            </section>

            <section class="container mx-auto py-8">
                <h1 class="text-xl font-bold mb-8"> All Pizzas</h1>

                <div class="grid grid-cols-4 col-gap-12 row-gap-12">
                    <% pizzas.forEach(function(record) { %>
                    <div class="w-64">
                        <img class="h-40 mb-4 mx-auto rounded-full" src="/img/<%= record.image %>" alt=""></img>
                        <div class="text-center">
                            <h2 class="mb-4 text-lg"> <%= record.name %></h2>
                            <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= record.size %></span>
                            <div class="flex items-center justify-around mt-6">
                                <span class="text-lg font-bold">$<%= record.price %></span>
                                <button data-pizza ="<%=JSON.stringify(record)%> "class="add-to-cart py-1 px-6 flex items-center font-bold">
                                    <span>+</span>
                                    <span class="ml-4">Add</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <%})%>
                </div>


            </section>
